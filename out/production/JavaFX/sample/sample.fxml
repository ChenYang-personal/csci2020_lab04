<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">

    <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="title1"
            GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField
            GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="title2"
            GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="title3"
            GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Phone#:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="title4"
            GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Register"
                onAction="#handleSubmitButtonAction"/>
    </HBox>
</GridPane>
